<h1>Edit Article:</h1>
{{#with article}}
<form action='/articles/{{title}}/edit?_method=PUT' method='post'>
    <label>Title: <input type='text' name='title' value={{title}} required></label>
    <br><br>
    <label>Author: <input type='text' name='author' value={{author}} required></label>
    <br><br>
    <label>Description: <input type='text' name='description' value={{description}} required></label>
    <br><br>
    <input type='submit' value='Update'>
</form>
{{/with}}
